


<%#= @student_answer.student_detail.first_name %>


<%= render 'layouts/messages'%> 
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Answers</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
            <%if current_user.role != 'Student'%>
            <%#= link_to 'New Question', new_question_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>
            <%end%>
        <div class="table-responsive">
        	<h3><b><%= @student_detail.first_name %> <%= @student_detail.middle_name %> <%= @student_detail.last_name %></b></h3>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Course Applied For:</strong>
          <%= @student_detail.course_applied_for %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Age:</strong>
          <%= @student_detail.age %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Birthdate:</strong>
          <%= @student_detail.birthdate %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Father Name:</strong>
          <%= @student_detail.father_name %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Father Name:</strong>
          <%= @student_detail.mother_name %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Father's Education:</strong>
          <%= @student_detail.father_education %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Father's Occupation:</strong>
          <%= @student_detail.father_education %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Mother's Education:</strong>
          <%= @student_detail.mother_education %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>SSC Marks:</strong>
          <%= @student_detail.ssc_marks %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>HSC Marks:</strong>
          <%= @student_detail.hsc_marks %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>PCB %:</strong>
          <%= @student_detail.pcb %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>PCM %:</strong>
          <%= @student_detail.pcm %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Address:</strong>
          <%= @student_detail.address %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Contact No:</strong>
          <%= @student_detail.contact_no %>  
        </p>
        </div>

        <div class="col-md-4">
        <p class="text-info">
          <strong>Email:</strong>
          <%= @student_detail.email %>  
        </p>
        </div>

          <table class="table table-striped table-bordered table-hover dataTables-example" >            
	<tr>
		
		<th>Question</th>
		
		<th>Answer</th>
	</tr>

<% @student_detail.student_answers.each do |sa| %>
<tr>
<td><%= sa.question.question %></td>
<td><%= sa.answer.answer %></td>
</tr>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>
</div>




<script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>

